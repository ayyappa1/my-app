node{
   stage('SCM Checkout'){
     git 'https://github.com/ayyappa1/my-app'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['tomcat-dev']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war ec2-user@54.152.120.247:/opt/apache-tomcat-8.5.47/webapps'
      }
   }
}
